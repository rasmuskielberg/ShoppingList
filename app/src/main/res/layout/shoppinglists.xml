<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorShoppingListBackground">

    <ImageButton
        android:id="@+id/delete_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:src="@drawable/ic_delete_sweep_black_36dp"
        android:contentDescription="@string/button_delete"
        android:background="@null"/>

    <TextView
        android:id="@+id/shoppingListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/delete_item_button"
        android:textColor="@color/colorTextPrimary"/>

    <TextView
        android:id="@+id/shoppingListType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@id/shoppingListName"/>

    <TextView
        android:id="@+id/shoppingListUpdatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/shoppingListType"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@id/shoppingListName"/>

</RelativeLayout>